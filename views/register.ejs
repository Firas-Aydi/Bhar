<%- include('parts/top.ejs')%>
  <br><br><br><br><br><br><br>
  <div class="container">
    <form method="POST" action="/register">
      <!-- Name input -->
      <div class="form-outline mb-4">
        <input type="text" id="form1Example6" name="type" value="<%= type %>" class="form-control" placeholder="Type" readonly/>
      </div>
      <div class="form-outline mb-4">
        <input type="text" id="form1Example1" name="name" class="form-control" placeholder="Name" />
      </div>
      <div class="form-outline mb-4">
        <input type="text" id="form1Example2" name="lastname" class="form-control" placeholder="lastname" />
      </div>
      <!-- Phone input -->
      <div class="form-outline mb-4">
        <input type="number" id="form1Example3" name="phone" class="form-control" placeholder="Phone" />
      </div>
      <!-- Address input -->
      <div class="form-outline mb-4">
        <input type="text" id="form1Example5" name="address" class="form-control" placeholder="Address" />
      </div>
      <!-- Password input -->
      <div class="form-outline mb-4">
        <input type="password" id="form1Example4" name="password" class="form-control" placeholder="Password" />
      </div>
      <% if (message) {%>
        <div class="alert alert-danger">
          <%=message%>
        </div>
        <% } %>
          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-block">Register</button>
    </form>
  </div>
  <%-include('parts/bottom.ejs')%>